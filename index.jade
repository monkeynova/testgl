doctype html
html
  head
    title WebGL Test
    script(src='./jquery-1.9.1.min.js')
    script(src='./glMatrix-0.9.5.min.js')
    script(src='./webgl-utils.js')
    script(src='./code.js')

    script#color-fs(type="x-shader/x-fragment")
      include color.frag
    script#color-vs(type="x-shader/x-vertex")
      include color.vert

    script#texture-fs(type="x-shader/x-fragment")
      include texture.frag
    script#texture-vs(type="x-shader/x-vertex")
      include texture.vert

    :stylus
      body
        font-family ariel sans-serif
        text-align center

      #canvasbox
        border solid 1px black

      #viewport
        background grey
        width 640px
        height 480px

  body(lang='en')
    h1 Test Canvas
    #canvasbox
      canvas#viewport
    
    #status Initializing...
